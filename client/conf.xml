<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/src/app/tsung-1.0.dtd" [] >
<tsung loglevel="notice">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
          <server host="172.17.254.3" port="5000" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="15" unit="minute">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
              <http url='http://172.18.255.2:80/' version='1.1' method='POST'  content_type='application/json'>
                <http_header name="Host" value="service1.com"/>
              </http>
      </request>
      <!--<request>
              <http url='http://172.18.255.2:80/' version='1.1' method='POST'  content_type='application/json'>
                <http_header name="Host" value="frontend.com"/>
              </http>
      </request>-->
      <thinktime value="2" random="true"></thinktime>
    </session>
  </sessions>
</tsung>